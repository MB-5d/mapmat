{
  "name": "mapmat-backend",
  "version": "1.0.0",
  "description": "Map Mat - Visual sitemap generator backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:worker": "RUN_MODE=worker node server.js",
    "check:backend": "node --check server.js && node --check db.js && node --check routes/auth.js && node --check routes/api.js",
    "check:frontend-build": "cd frontend && CI=false npm run build",
    "backup:archive": "bash scripts/backup-repo.sh",
    "test:smoke": "node scripts/smoke-test.js",
    "test:ia": "node scripts/ia-test.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.0.0-rc.12",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "playwright": "^1.57.0",
    "uuid": "^9.0.0"
  }
}
